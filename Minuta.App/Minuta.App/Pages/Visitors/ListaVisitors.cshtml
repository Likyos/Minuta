@page
@model Minuta.App.Pages.ListaVisitorsModel
@{
}
<h3>Listado de Visitantes</h3>
<div class="container">
<table class="table table-warning table-striped table-hover table-borderless">
    <thead>
    	<tr>
      		<th scope="col">ID</th>
            <th scope="col">Cedula</th>
      		<th scope="col">Nombres</th>
      		<th scope="col">Apellidos</th>
    	</tr>
  	</thead>
    @foreach (var visitor in Model.listaVisitor)
    {
        <tbody class="table-group-divider table-striped table-hover">
        <tr>
            <td>@visitor.ID</td>
            <td>@visitor.cedula</td>
            <td>@visitor.nombre</td>
            <td>@visitor.apellido</td>

             <td>
                <a asp-page="./DetallesVisitors" asp-route-visitorId="@visitor.ID" Class="bi-eye-fill h3 text-warning text-hover"></a>
            </td>
            
        </tr>
        </tbody>
    }
</table>
</div>
<a class = "btn btn-warning table-btn" asp-page="./EditarVisitors" class="btn-default">Adicionar un visitante</a>