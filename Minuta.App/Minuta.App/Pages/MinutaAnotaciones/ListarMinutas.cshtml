@page
@model Minuta.App.Pages.ListarMinutasModel
@{
}

<h3>Listado de Anotaciones</h3>
<div class="container">
<table class="table table-warning table-striped table-hover table-borderless"> 
	<thead>
    	<tr>
      		<th scope="col">ID</th>
      		<th scope="col">fechaAnotacion</th>
      		<th scope="col">Asunto</th>
    	</tr>
  	</thead>
    @foreach (var minutaAnotacion in Model.listarMinutas)
    {
		<tbody class="table-group-divider table-striped table-hover">
        	<tr> 
            	<td>@minutaAnotacion.minutaAnotacionID</td>
            	<td>@minutaAnotacion.fechaAnotacion</td>
            	<td>@minutaAnotacion.asunto</td>
            	<td>
                	<a asp-page="./DetallesMinutas" asp-route-minutaAnotacionId="@minutaAnotacion.minutaAnotacionID" Class="bi-eye-fill h3 text-warning text-hover"></a>                
            	</td>
            	<td>
					<a asp-page="./EditarMinutas" asp-route-minutaAnotacionId="@minutaAnotacion.minutaAnotacionID" Class="bi-pencil-square h3 text-danger text-hover"></a>  
            	</td>
        	</tr>
		</tbody>
    }
</table>
</div>
<a class = "btn btn-warning table-btn" asp-page="./EditarMinutas" class="btn-default">Adicionar Minutas</a>