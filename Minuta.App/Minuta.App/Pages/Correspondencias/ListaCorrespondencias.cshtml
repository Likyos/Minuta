@page
@model Minuta.App.Pages.ListaCorrespondenciasModel
@{
}
<h3>Listado de Correspondencias</h3>
<div class="container">
<table class="table table-warning table-striped table-hover table-borderless"> 
	<thead>
    	<tr>
      		<th scope="col">ID</th>
      		<th scope="col">Tipo de Correspondencia</th>
      		<th scope="col">Remitente</th>
      		<th scope="col">Estado de Entrega</th>
    	</tr>
  	</thead>
    @foreach (var correspondencia in Model.listaCorrespondencias)
    {
		<tbody class="table-group-divider table-striped table-hover">
        	<tr> 
            	<td>@correspondencia.correspondenciaID</td>
            	<td>@correspondencia.tipoCorrespondencia</td>
            	<td>@correspondencia.remitente</td>
            	<td>@correspondencia.estadoEntrega</td>
            	<td>
                	<a asp-page="./DetallesCorrespondencias" asp-route-correspondenciaId="@correspondencia.correspondenciaID" Class="bi-eye-fill h3 text-warning text-hover"></a>                
            	</td>
            	<td>
					<a asp-page="./EditarCorrespondencias" asp-route-correspondenciaId="@correspondencia.correspondenciaID" Class="bi-pencil-square h3 text-danger text-hover"></a>  
            	</td>
        	</tr>
		</tbody>
    }
</table>
</div>
<a class = "btn btn-warning table-btn" asp-page="./EditarCorrespondencias" class="btn-default">Adicionar Correspondencia</a>