@page
@model Minuta.App.Pages.ListaVigilantesModel
@{
}
<h3>Listado de Vigilantes</h3>
<div class="container">
<table class="table table-warning table-striped table-hover table-borderless">
    <thead>
    	<tr>
      		<th scope="col">ID</th>
            <th scope="col">Cedula</th>
      		<th scope="col">Nombres</th>
      		<th scope="col">Apellidos</th>
            <th scope="col">Numero de Placa</th>
			<th scope="col">Detalles</th>
    	</tr>
  	</thead>
    @foreach (var vigilante in Model.listaVigilante)
    {
        <tbody class="table-group-divider table-striped table-hover">
        <tr>
            <td>@vigilante.ID</td>
            <td>@vigilante.cedula</td>
            <td>@vigilante.nombre</td>
            <td>@vigilante.apellido</td>
            <td>
                <a asp-page="./DetallesVigilantes" asp-route-vigilanteId="@vigilante.ID" Class="bi-eye-fill h3 text-warning text-hover"></a>
            </td>   
            <td>
                <a asp-page="./EditarVigilantes" asp-route-vigilanteId="@vigilante.ID"Class="bi-pencil-square h3 text-danger text-hover"></a>
            </td>  
        </tr>
        </tbody>
    }
</table>
</div>
<a class = "btn btn-warning table-btn" asp-page="./EditarVigilantes" class="btn-default">Adicionar Vigilante</a>